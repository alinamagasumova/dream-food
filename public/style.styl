body
    display flex
    justify-content center
    align-items center
    flex-direction column
    margin 0
    min-height 100vh
    background #cdb1cf
    h2 // body h2
        color rgb(27, 23, 27)
    &>h1 // body>h1
        color rgb(27, 23, 27)
        margin 0
    // &:hover // body:hover
    //     background-color pink

table
    box-shadow 1px 1px 10px 1px rgb(54, 51, 51)
    border 1px solid #ddd
    text-align center
    margin 1rem
    border-collapse collapse
    th 
        padding 5px 
        border 1px solid #ddd
        background  #efefef
    td
        border 1px solid #ddd
        width 70px
        height 20px
        padding 5px

form 
    margin 2rem